<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idCategoryForEditDialogTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_margin="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameCategoryEditLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameCategoryEditInputTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category name" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteCategoryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_weight="0.2"
                android:layout_margin="10dp"
                app:backgroundTint="@android:color/holo_red_light"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_delete_24"
                app:iconGravity="top"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateCategoryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_weight="0.2"
                android:layout_margin="10dp"
                app:backgroundTint="@android:color/holo_green_light"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_save_24"
                app:iconGravity="top"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelEditCategoryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight="0.2"
                android:layout_margin="10dp"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_cancel_24"
                app:iconGravity="top"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>